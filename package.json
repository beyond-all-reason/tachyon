{
  "name": "tachyon-protocol",
  "version": "1.18.0",
  "description": "",
  "scripts": {
    "dev": "nodemon --watch \"src/**\" --ext ts --exec npm run build",
    "build": "npx tsx src/index.ts",
    "build:clean": "rm -rf dist schema docs/schema && npm run build",
    "tidy": "npm run lint && npm run format",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "npm run test:cjs && npm run test:esm",
    "test:cjs": "node --require tsx/cjs --test ./test/cjs/**/*.cts",
    "test:esm": "node --import tsx/esm --test ./test/esm/**/*.mts",
    "prepublishOnly": "npm run build:clean && npm run test"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./validators": {
      "import": {
        "types": "./dist/validators.d.ts",
        "default": "./dist/validators.js"
      },
      "require": {
        "types": "./dist/validators.d.cts",
        "default": "./dist/validators.cjs"
      },
      "default": {
        "types": "./dist/validators.d.ts",
        "default": "./dist/validators.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types.d.ts",
        "default": "./dist/types.js"
      },
      "require": {
        "types": "./dist/types.d.cts",
        "default": "./dist/types.cjs"
      },
      "default": {
        "types": "./dist/types.d.ts",
        "default": "./dist/types.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyond-all-reason/tachyon.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/beyond-all-reason/tachyon/issues"
  },
  "homepage": "https://github.com/beyond-all-reason/tachyon#readme",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "json-schema-faker": "^0.5.9",
    "json-schema-to-typescript": "^15.0.4",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "pure-rand": "^7.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "type-fest": "^4.41.0",
    "typebox": "~1.0.80",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1"
  }
}
