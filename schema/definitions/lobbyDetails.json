{
    "$id": "https://schema.beyondallreason.dev/tachyon/definitions/lobbyDetails.json",
    "title": "LobbyDetails",
    "description": "The full state of a lobby",
    "type": "object",
    "properties": {
        "id": { "type": "string" },
        "bossId": {
            "$ref": "../definitions/userId.json",
            "description": "User ID of the lobby boss (creator). Boss can change lobby settings like mods."
        },
        "name": { "type": "string" },
        "mapName": { "type": "string" },
        "engineVersion": { "type": "string" },
        "gameVersion": { "type": "string" },
        "allyTeamConfig": {
            "type": "object",
            "patternProperties": {
                "^(.*)$": {
                    "description": "this represent an array, items should be sorted lexicographically on their keys",
                    "type": "object",
                    "properties": {
                        "startBox": { "$ref": "../definitions/startBox.json" },
                        "maxTeams": { "type": "integer", "minimum": 1 },
                        "teams": {
                            "type": "object",
                            "patternProperties": {
                                "^(.*)$": {
                                    "type": "object",
                                    "properties": {
                                        "maxPlayers": {
                                            "type": "integer",
                                            "minimum": 1
                                        }
                                    },
                                    "required": ["maxPlayers"]
                                }
                            }
                        }
                    },
                    "required": ["startBox", "maxTeams", "teams"]
                }
            }
        },
        "mods": {
            "description": "Ordered list of mods/mutators to apply. Order matters - later mods override earlier ones.",
            "type": "array",
            "items": { "$ref": "../definitions/mod.json" },
            "maxItems": 10
        },
        "members": {
            "type": "object",
            "patternProperties": {
                "^(.*)$": {
                    "anyOf": [
                        {
                            "type": "object",
                            "properties": {
                                "type": { "const": "player" },
                                "id": { "$ref": "../definitions/userId.json" },
                                "allyTeam": { "type": "string" },
                                "team": { "type": "string" },
                                "player": { "type": "string" },
                                "sync": {
                                    "$ref": "../definitions/memberSyncStatus.json",
                                    "description": "Tracks which resources this member has downloaded"
                                }
                            },
                            "required": [
                                "type",
                                "id",
                                "allyTeam",
                                "team",
                                "player"
                            ]
                        },
                        {
                            "type": "object",
                            "properties": {
                                "type": { "const": "spec" },
                                "id": { "$ref": "../definitions/userId.json" },
                                "joinQueuePosition": { "type": "number" },
                                "sync": {
                                    "$ref": "../definitions/memberSyncStatus.json",
                                    "description": "Tracks which resources this member has downloaded"
                                }
                            },
                            "required": ["type", "id"]
                        }
                    ]
                }
            }
        },
        "currentBattle": {
            "description": "If a battle is currently happening, here are the info",
            "type": "object",
            "properties": {
                "startedAt": { "$ref": "../definitions/unixTime.json" }
            },
            "required": ["startedAt"]
        }
    },
    "required": [
        "id",
        "bossId",
        "name",
        "mapName",
        "engineVersion",
        "gameVersion",
        "allyTeamConfig",
        "mods",
        "members"
    ]
}
