{
    "$id": "https://schema.beyondallreason.dev/tachyon/definitions/clan.json",
    "title": "Clan",
    "type": "object",
    "properties": {
        "clanId": { "$ref": "../definitions/clanId.json" },
        "tag": { "type": "string", "minLength": 3, "maxLength": 6 },
        "name": { "type": "string", "maxLength": 30 },
        "description": { "type": "string", "maxLength": 500 },
        "logoUrl": { "type": "string", "format": "uri", "maxLength": 200 },
        "websiteUrl": { "type": "string", "format": "uri", "maxLength": 200 },
        "discordUrl": { "type": "string", "format": "uri", "maxLength": 200 },
        "teamspeakUrl": { "type": "string", "format": "uri", "maxLength": 200 },
        "twitchUrl": { "type": "string", "format": "uri", "maxLength": 200 },
        "youtubeUrl": { "type": "string", "format": "uri", "maxLength": 200 },
        "facebookUrl": { "type": "string", "format": "uri", "maxLength": 200 },
        "twitterUrl": { "type": "string", "format": "uri", "maxLength": 200 }
    },
    "required": ["clanId", "tag", "name"]
}
