{
    "$id": "https://schema.beyondallreason.dev/tachyon/clan/update/request.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ClanUpdateRequest",
    "tachyon": {
        "source": "user",
        "target": "server",
        "scopes": ["tachyon.lobby"]
    },
    "type": "object",
    "properties": {
        "type": { "const": "request" },
        "messageId": { "type": "string" },
        "commandId": { "const": "clan/update" },
        "data": {
            "title": "ClanUpdateRequestData",
            "type": "object",
            "properties": {
                "clan": {
                    "target": "Omit",
                    "parameters": [
                        { "$ref": "../../definitions/clan.json" },
                        {
                            "anyOf": [
                                { "const": "clanId" },
                                { "const": "membersCount" },
                                { "const": "members" }
                            ]
                        }
                    ]
                }
            },
            "required": ["clan"]
        }
    },
    "required": ["type", "messageId", "commandId", "data"]
}
