{
    "$id": "https://schema.beyondallreason.dev/tachyon/clan/updated/event.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ClanUpdatedEvent",
    "tachyon": {
        "source": "server",
        "target": "user",
        "scopes": ["tachyon.lobby"]
    },
    "type": "object",
    "properties": {
        "type": { "const": "event" },
        "messageId": { "type": "string" },
        "commandId": { "const": "clan/updated" },
        "data": {
            "title": "ClanUpdatedEventData",
            "type": "object",
            "properties": {
                "updateTypes": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            { "const": "description" },
                            { "const": "tag" },
                            { "const": "name" }
                        ]
                    }
                }
            },
            "required": ["updateTypes"]
        }
    },
    "required": ["type", "messageId", "commandId", "data"]
}
