{
    "$id": "https://schema.beyondallreason.dev/tachyon/clan/invite/request.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ClanInviteRequest",
    "tachyon": {
        "source": "user",
        "target": "server",
        "scopes": ["tachyon.lobby"]
    },
    "type": "object",
    "properties": {
        "type": { "const": "request" },
        "messageId": { "type": "string" },
        "commandId": { "const": "clan/invite" },
        "data": {
            "title": "ClanInviteRequestData",
            "type": "object",
            "properties": {
                "user": { "$ref": "../../definitions/user.json" },
                "clan": { "$ref": "../../definitions/clan.json" }
            },
            "required": ["user", "clan"]
        }
    },
    "required": ["type", "messageId", "commandId", "data"]
}
