{
    "$id": "https://schema.beyondallreason.dev/tachyon/lobby/create/request.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LobbyCreateRequest",
    "tachyon": {
        "source": "user",
        "target": "server",
        "scopes": ["tachyon.lobby"]
    },
    "type": "object",
    "properties": {
        "type": { "const": "request" },
        "messageId": { "type": "string" },
        "commandId": { "const": "lobby/create" },
        "data": {
            "title": "LobbyCreateRequestData",
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "mapName": { "type": "string" },
                "allyTeamConfig": {
                    "description": "each object describes an ally team",
                    "type": "array",
                    "items": {
                        "description": "config for this ally team",
                        "type": "object",
                        "properties": {
                            "maxTeams": { "type": "integer", "minimum": 1 },
                            "startBox": {
                                "$ref": "../../definitions/startBox.json"
                            },
                            "teams": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "maxPlayers": {
                                            "type": "integer",
                                            "minimum": 1
                                        }
                                    },
                                    "required": ["maxPlayers"]
                                }
                            }
                        },
                        "required": ["maxTeams", "startBox", "teams"]
                    }
                }
            },
            "required": ["name", "mapName", "allyTeamConfig"]
        }
    },
    "required": ["type", "messageId", "commandId", "data"]
}
