{
    "$id": "https://schema.beyondallreason.dev/tachyon/lobby/listUpdated/event.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LobbyListUpdatedEvent",
    "tachyon": {
        "source": "server",
        "target": "user",
        "scopes": ["tachyon.lobby"]
    },
    "type": "object",
    "properties": {
        "type": { "const": "event" },
        "messageId": { "type": "string" },
        "commandId": { "const": "lobby/listUpdated" },
        "data": {
            "title": "LobbyListUpdatedEventData",
            "type": "object",
            "properties": {
                "updates": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "description": "this lobby is no more",
                                "type": "object",
                                "properties": {
                                    "type": { "const": "removed" },
                                    "id": { "type": "string" }
                                },
                                "required": ["type", "id"]
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "type": { "const": "added" },
                                    "overview": {
                                        "$ref": "../../definitions/lobbyOverview.json"
                                    }
                                },
                                "required": ["type", "overview"]
                            },
                            {
                                "description": "reset the list of lobby",
                                "type": "object",
                                "properties": {
                                    "type": { "const": "setList" },
                                    "overviews": {
                                        "type": "array",
                                        "items": {
                                            "$ref": "../../definitions/lobbyOverview.json"
                                        }
                                    }
                                },
                                "required": ["type", "overviews"]
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "type": { "const": "updated" },
                                    "overview": {
                                        "type": "object",
                                        "properties": {
                                            "id": { "type": "string" },
                                            "name": { "type": "string" },
                                            "playerCount": {
                                                "type": "integer"
                                            },
                                            "maxPlayerCount": {
                                                "type": "integer"
                                            },
                                            "mapName": { "type": "string" },
                                            "engineVersion": {
                                                "type": "string"
                                            },
                                            "gameVersion": { "type": "string" },
                                            "currentBattle": {
                                                "anyOf": [
                                                    {
                                                        "type": "object",
                                                        "properties": {
                                                            "startedAt": {
                                                                "$ref": "../../definitions/unixTime.json"
                                                            }
                                                        },
                                                        "required": [
                                                            "startedAt"
                                                        ]
                                                    },
                                                    { "type": "null" }
                                                ]
                                            }
                                        },
                                        "required": ["id"]
                                    }
                                },
                                "required": ["type", "overview"]
                            }
                        ]
                    }
                }
            },
            "required": ["updates"]
        }
    },
    "required": ["type", "messageId", "commandId", "data"]
}
