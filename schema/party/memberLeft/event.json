{
    "$id": "https://schema.beyondallreason.dev/tachyon/party/memberLeft/event.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "PartyMemberLeftEvent",
    "tachyon": {
        "source": "server",
        "target": "user",
        "scopes": ["tachyon.lobby"]
    },
    "type": "object",
    "properties": {
        "type": { "const": "event" },
        "messageId": { "type": "string" },
        "commandId": { "const": "party/memberLeft" },
        "data": {
            "title": "PartyMemberLeftEventData",
            "type": "object",
            "properties": {
                "userId": { "$ref": "../../definitions/userId.json" },
                "reason": {
                    "anyOf": [{ "const": "left" }, { "const": "kicked" }]
                }
            },
            "required": ["userId", "reason"]
        }
    },
    "required": ["type", "messageId", "commandId", "data"]
}
